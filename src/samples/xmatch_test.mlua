-{ extension 'xmatch' }

print(match 1 with 1 -> 'ok' | 2 -> 'KO' end)

function f(x)
   match x with
   | y if y<10 -> print 'small'
   | _ -> print 'big'
   end
end

match function g
| x if x<10 -> print 'small'
| _         -> print 'big'
end

match function cmp
| x, y if x<y -> print 'increasing'
| _, _        -> print 'decreasing'
end

f(1) f(11) g(1) g(11)

cmp(1,2) cmp(2,1)

bind {a, b} = {'o', 'k'}

print(a..b)

c, d = 'k', 'o'

do
   local bind {c, {d}} = {'o', {'k'}}
   print(c..d)
end

print(d..c)
